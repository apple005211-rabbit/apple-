    { icon: <Wind className="w-5 h-5 text-pink-300" />, title: "æ«»èŠ±æˆ€æ›²", desc: "éš¨é¢¨é£„è½çš„èŠ±ç“£èˆ‡åˆæˆ€çš„å¿ƒè·³" },
    { icon: <CloudRain className="w-5 h-5 text-blue-400" />, title: "æµ·é‚Šçš„å¤å¤©", desc: "æ³¢æµªè²ã€æ²™ç˜èˆ‡å…©äººå…±äº«çš„æœæ±" },
    { icon: <Moon className="w-5 h-5 text-indigo-400" />, title: "æ˜Ÿç©ºå‘Šç™½", desc: "åœ¨éœè¬çš„å¤œç©ºä¸‹å‚³éæ€å¿µ" },
    { icon: <Music className="w-5 h-5 text-purple-400" />, title: "é›¨ä¸­çš„å›æ†¶", desc: "é€éé›¨è²å–šèµ·é‚£äº›æº«æŸ”çš„éå¾€" },
  ];

  const handlePlay = () => {
    setIsPlaying(!isPlaying);
